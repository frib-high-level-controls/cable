extends layout.pug

block head
  meta(charset='utf-8')
  title FRIB Cable :: request :: #{request._id}
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href=basePath + '/bootstrap/css/bootstrap.css')
  link(rel='stylesheet', href=basePath + '/bootstrap/css/bootstrap-responsive.css')
  link(rel='stylesheet', href=basePath + '/ui-lightness/jquery-ui-1.10.2.custom.css')
  link(rel='stylesheet', href=basePath + '/stylesheets/style.css')

block content
  script.
    var request = !{JSON.stringify(request)};
  .container
    #message
    h3 Request
      = ' '
      span#request_id #{request._id}
    #details
block js
  script(type='text/javascript', src=basePath + '/jquery/jquery-1.9.1.js')
  script(type='text/javascript', src=basePath + '/bootstrap/js/bootstrap.js')
  script(type='text/javascript', src=basePath + '/javascripts/util.js')
  script(type='text/javascript', src=basePath + '/javascripts/request-details.js')
