extends layout.pug

block head
  meta(charset='utf-8')
  title FRIB Cable types
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href=basePath + '/stylesheets/style.css')
  script(type='text/javascript', src=basePath + '/dist/cabletypemgmt.js')

block content
  .container-fluid(style='margin-top: 10px')
    #message
    .btn-toolbar
      .btn-group.mr-2
        a.btn.btn-primary#add(href=basePath + '/cabletypes/new', target='_blank')
          i.far.fa-file.fa-lg
          | &nbsp;Add a New Cable Type
      .btn-group.mr-2
        a.btn.btn-info(href=basePath + '/cabletypes')
          i.fa.fa-sign-out-alt.fa-lg
          | &nbsp;Back to Read Only
    table.table.table-bordered.table-hover#cable-type
